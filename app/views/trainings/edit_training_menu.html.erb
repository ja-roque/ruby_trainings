
<div id="edit-training-menu">
  <div class="lessons">
    <button class="btn btn-primary btn-group-justified" id="new-lesson-btn">New Lesson</button>
    <% @training.lessons.each do |lesson| %>
      <div class="card">
        <div class="card-header">
          <%= lesson.name %>
        </div>
        <ul class="list-group list-group-flush">
          <% lesson.contents.each do |content| %>
            <%= link_to content.name, {controller: "lessons", action: "lesson_info", lesson_id: lesson.id}, {class: 'list-group-item'} %>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>