
<div class="card">
  <div class="card-header">
    Training Creator
  </div>
  <div class="card-body">
    <%= form_with model: @training do |f| %>
      <div class="form-group">
        <label for="name_field">Training Name</label>
        <%= f.text_field :name, id: 'name_field'%>
        <small id="nameHelp" class="form-text text-muted">This is the name you're users will see.</small>
      </div>
      <%= f.submit "Create", class: 'btn btn-primary' %>
    <% end %>
  </div>

</div>
